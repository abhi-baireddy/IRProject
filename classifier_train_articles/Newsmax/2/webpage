<script type="text/javascript">

    googletag.cmd.push(function () {
        var Ads =  (function (parent, $) {
            var module = parent || {};
            // Slide in Bottom Ad
            module.siuAdFixed = function (s, e, b, size) {
                // Animate Ad
                var ad = document.getElementById(s);
                if (ad) {
                    ad.className = s + ' animated slideInUp';
                    ad.style.cssText = 'bottom: 0; width: ' + size[0] + 'px; height: ' + size[1] + 'px;';

                    // Close
                    document.getElementById(b).addEventListener('click', function (e) {
                        $('#' + s).remove();

                        // Create cookie
                        $.cookie(s, true, { expires: 1, path: '/' });
                    });
                }
            };

            // Slide in Down Ad
            module.siuAdFixedClose = function (s, e, size) {
                // Animate Ad
                var ad = document.getElementById(s);
                if (ad) {
                    ad.className = s + ' animated slideInDown';
                    ad.style.cssText = 'bottom: -110px; width: ' + size[0] + 'px; height: ' + size[1] + 'px;';
                }
            };

            module.init = function (s) {
                // If cookie is set just remove the ad
                var c = $.cookie(s);
                if (c) {
                    $('#' + s).remove();
                }
            };

            return module;
        }(Ads || {}, jQuery));

        jQuery(document).ready(function () {
            Ads.init('siu-ad-fixed');
        });

        googletag.pubads().addEventListener('slotRenderEnded', function (event) {
            if (!event.size) return;
            var adRendered = false;
            for (var p in event.slot) {
                if (event.slot.hasOwnProperty(p)) {
                    if (event.slot[p] === '/6305169/newsmax.mab') {
                        adRendered = true;
                        break;
                    }
                }
            }

            if (adRendered) {
                var siuAdFixedDidAppear = false;
                window.onscroll = function () {
                    if (window.pageYOffset >= 3500) {
                        if (!siuAdFixedDidAppear) {
                            Ads.siuAdFixed('siu-ad-fixed', 'siu-ad-fixed-open', 'siu-ad-close-button', event.size);
                        }
                        siuAdFixedDidAppear = true;
                    } else {
                        if (siuAdFixedDidAppear && window.pageYOffset < 3500) {
                            Ads.siuAdFixedClose('siu-ad-fixed', 'siu-ad-fixed-close', event.size);
                            siuAdFixedDidAppear = false;
                        }
                    }
                };
            }
        });
    });

</script>
<style type="text/css">
   .animated {
      -webkit-animation-duration: 1s;
      animation-duration: 1s;
      -webkit-animation-fill-mode: both;
      animation-fill-mode: both;
    }  

    @-webkit-keyframes slideInUp {
      from {
        -webkit-transform: translate3d(0, 100%, 0);
        transform: translate3d(0, 100%, 0);
        visibility: visible;
      }

      to {
        -webkit-transform: translate3d(0, 0, 0);
        transform: translate3d(0, 0, 0);
      }
    }

    @keyframes slideInUp {
      from {
        -webkit-transform: translate3d(0, 100%, 0);
        transform: translate3d(0, 100%, 0);
        visibility: visible;
      }

      to {
        -webkit-transform: translate3d(0, 0, 0);
        transform: translate3d(0, 0, 0);
      }
    }

    .slideInUp {
      -webkit-animation-name: slideInUp;
      animation-name: slideInUp;
    }

   @-webkit-keyframes slideInDown {
      from {
        -webkit-transform: translate3d(0, -100%, 0);
        transform: translate3d(0, -100%, 0);
        visibility: visible;
      }

      to {
        -webkit-transform: translate3d(0, 0, 0);
        transform: translate3d(0, 0, 0);
      }
    }

    @keyframes slideInDown {
      from {
        -webkit-transform: translate3d(0, -100%, 0);
        transform: translate3d(0, -100%, 0);
        visibility: visible;
      }

      to {
        -webkit-transform: translate3d(0, 0, 0);
        transform: translate3d(0, 0, 0);
      }
    }

    .slideInDown {
      -webkit-animation-name: slideInDown;
      animation-name: slideInDown;
    }

