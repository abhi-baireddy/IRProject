  <source srcset="https://cdn.vox-cdn.com/thumbor/ClZbAEIPibJn8Z2KITNNqAat2_Q=/0x0:2040x1360/320x0/filters:focal(0x0:2040x1360):format(webp):no_upscale()/cdn.vox-cdn.com/uploads/chorus_asset/file/19304197/akrales_191017_3725_0139.jpg 320w, https://cdn.vox-cdn.com/thumbor/GqzZa6nga3RSEQ69jrnHx9IF_O8=/0x0:2040x1360/520x0/filters:focal(0x0:2040x1360):format(webp):no_upscale()/cdn.vox-cdn.com/uploads/chorus_asset/file/19304197/akrales_191017_3725_0139.jpg 520w, https://cdn.vox-cdn.com/thumbor/NWvJaOQ5L23xr4hYqJucB_HmS80=/0x0:2040x1360/720x0/filters:focal(0x0:2040x1360):format(webp):no_upscale()/cdn.vox-cdn.com/uploads/chorus_asset/file/19304197/akrales_191017_3725_0139.jpg 720w, https://cdn.vox-cdn.com/thumbor/IVC3_QFGULspEjm87lORFckac30=/0x0:2040x1360/920x0/filters:focal(0x0:2040x1360):format(webp):no_upscale()/cdn.vox-cdn.com/uploads/chorus_asset/file/19304197/akrales_191017_3725_0139.jpg 920w, https://cdn.vox-cdn.com/thumbor/Shcyub6CNKGpauo5Ti231gPeodk=/0x0:2040x1360/1120x0/filters:focal(0x0:2040x1360):format(webp):no_upscale()/cdn.vox-cdn.com/uploads/chorus_asset/file/19304197/akrales_191017_3725_0139.jpg 1120w, https://cdn.vox-cdn.com/thumbor/9qjPld5oAC5WcqZE52IVtbCqjJc=/0x0:2040x1360/1320x0/filters:focal(0x0:2040x1360):format(webp):no_upscale()/cdn.vox-cdn.com/uploads/chorus_asset/file/19304197/akrales_191017_3725_0139.jpg 1320w, https://cdn.vox-cdn.com/thumbor/28U9zCOWZrGBs-3R5o2BIe_YRn0=/0x0:2040x1360/1520x0/filters:focal(0x0:2040x1360):format(webp):no_upscale()/cdn.vox-cdn.com/uploads/chorus_asset/file/19304197/akrales_191017_3725_0139.jpg 1520w, https://cdn.vox-cdn.com/thumbor/9CDFNJpTo9i45EQA5cccR25h7qk=/0x0:2040x1360/1720x0/filters:focal(0x0:2040x1360):format(webp):no_upscale()/cdn.vox-cdn.com/uploads/chorus_asset/file/19304197/akrales_191017_3725_0139.jpg 1720w, https://cdn.vox-cdn.com/thumbor/vUpeBMnjVwTnw8KYS5SWGY4FGto=/0x0:2040x1360/1920x0/filters:focal(0x0:2040x1360):format(webp):no_upscale()/cdn.vox-cdn.com/uploads/chorus_asset/file/19304197/akrales_191017_3725_0139.jpg 1920w" sizes="(min-width: 1221px) 846px, (min-width: 880px) calc(100vw - 334px), 100vw" type="image/webp">


