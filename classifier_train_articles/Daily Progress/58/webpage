                    nlEl = el.querySelectorAll('.not-logged-in'),
                    elShow = nlEl,
                    elRemove = liEl,
                    classRemove = 'not-logged-in';
 
                if(loggedIn){ elShow = liEl; elRemove = nlEl; classRemove = 'logged-in' }
                for(i=0; i< elShow.length; i++){
                    elShow[i].classList.remove(classRemove);
                }
