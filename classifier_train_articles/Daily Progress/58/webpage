    }
        
    try{
        if(window.sessionStorage){
            sessionStorage.setItem('__tnt.metering.wall.viewed',1);
        }
    }catch(e){}
    
    //GTM
    $('.subscription-services').trigger('tncms-track-services-displayed');

});    
__tnt.metering.config.date = 1584590400000;
                __tnt.metering.config.days = 30;

                __tnt.metering.config.sub_limit = 5;
                __tnt.metering.config.reg_limit = 5;

__tnt.metering.compatibility = function(){
    var compatible = true;
    var status = "";
    
    /* this checks for compatibility with DOM storage */
    try{
        window.sessionStorage.setItem('__tnt.compatibility',true);
    }catch(e){
        compatible = false;
        status = "FAIL: setItem unsupported";
    };

    try{
        window.sessionStorage.getItem('__tnt.compatibility');
    }catch(e){
        compatible = false;
        status = "FAIL: getItem unsupported";
    }
    return {'check':compatible,'status':status};
};
var bBloxAccess = false;

        if (window.TNCMS && window.TNCMS.Subscription && window.TNCMS.Subscription.onReady) {
            window.TNCMS.Subscription.onReady(function (oPaywall) {
                var bBloxRestricts = oPaywall.isRestricted ? oPaywall.isRestricted() : true;
                var bBloxAccess = oPaywall.allowAccess ? oPaywall.allowAccess() : bBloxRestricts;
                var bBloxAccessByIp = oPaywall.accessByIp ? oPaywall.accessByIp() : false;
                var sBloxAccessByIpError = oPaywall.accessByIpError ? oPaywall.accessByIpError() : null;
                var bBloxAccessBySvc = oPaywall.userHasService ? oPaywall.userHasService() : false;
                var sAccessMethod = 'unknown';

                if (bBloxAccess) {
                    if(bBloxAccessByIp){ sAccessMethod = "ip"; }
                    if(bBloxAccessBySvc){ sAccessMethod = "service"; }
                    __tnt.trackEvent({'category':'subscription','action':'user access','label':'user gained access through '+sAccessMethod,'value':'1'});

                    __tnt.subscription.api.decrypt();
                    userStatus.hasAccess = true;
                } else {
                    __tnt.metering.check();
                }

                if(sBloxAccessByIpError){
                    __tnt.trackEvent({'category':'subscription','action':'ip error','label':'accessByIp error: '+sBloxAccessByIpError,'value':'1'});
                }

                userStatus.accessMethod = sAccessMethod;
                userStatus.accessError = sBloxAccessByIpError;

                window.dispatchEvent(userStatus);
                __tnt.subscription.api.showContent();
            });
        }else{
            userStatus.accessError = "Software API unavailable";

            window.dispatchEvent(userStatus);
            __tnt.subscription.api.showContent();
        }
    });
    </script>

