    $('#site-search-753630-btn').on(__tnt.client.clickEvent, function(){
        $('#site-search-753630').submit();
        return false;
    });

    $('#site-search-753630').on('submit', function(){
        // Filter query
        var sQueryFiltered = $("#site-search-753630 input[name=q]").val().replace(/\?/g, '');
    $("#site-search-753630 input[name=q]").val( sQueryFiltered );

        if( $('#site-search-753630-term').val() ){
            return true;
        }else{
            return false;
        }
    });</script>
