<script>
window.__tnt || (window.__tnt = {});
__tnt.subscription || (__tnt.subscription = {});
__tnt.subscription.promos || (__tnt.subscription.promos = {});

__tnt.subscription.promos.fetch = function(promoEl, promoVal, blankSearch, callback){
    if(promoVal!="" && promoVal!=null || blankSearch){
// reset form
            promoEl.find('.promo-loading').show();
            promoEl.find('.output').html("");
            promoEl.find('.service-promo-status-message').html('');
            promoEl.find('.promo-placeholder').hide();
            
            var ajaxUrl = "https://www.dailyprogress.com/tncms/subscription/services/?promoCode="+promoVal;
            if(typeof(promoEl.attr("data-service-id"))!='undefined'){ ajaxUrl += '&service_id=' + promoEl.data('service-id'); }

            $.ajax({
                url:ajaxUrl,
                dataType:"json",
                success:function(data,textStatus,jqXHR){
                    __tnt.log("Promo JSON - success");
                    var impressionsData = [];
                    
                    if(data.length){
                    $.each(data,function(){
                        var promo = this,
                            template = promoEl.find('template.template-promo-service'),
                            wrapper = promoEl.find('.output'),
                            buttonPurchase = "Get Started",
                            customZipcodes = promo.custom.zipcodes,
                            customClassName = "",
                            servicePanelClasses = "promotion-service subscription-service panel panel-default ";

                        if(promo.custom.button_text){ buttonPurchase = promo.custom.button_text }
                        if(promo.custom.custom_class){ customClassName += promo.custom.custom_class }
                        if(customZipcodes){ customClassName += ' delivered' }
                        
                        // Array of Items to modify in the template
                        var elements = [{
                            'element' : '.subscription-service.panel',
                            'attr' : [{
                               'attr' : 'class',
                               'value' : servicePanelClasses + customClassName
                            }]
                        },{
                            'element' : 'h3',
                            'html' : promo.name
                        },{
                            'element' : '.service-note',
                            'html': promo.custom.note
                        },{
                            'element' : 'p.description',
                            'html' : promo.description
                        },{
                            'element' : 'a',
                            'html' : buttonPurchase,
                            'attr': [{
                                'attr' : 'data-subscription-service',
                                'value' : promo.service_id
                            },{
                                'attr' : 'href',
                                'value' : promo.purchase_url + '&referer_url=https%3A%2F%2Fwww.dailyprogress.com%2Fbusiness%2Faltrias-ceo-retires-names-william-f-gifford-jr-as-chief-executive-and-dominion-energys-ceo%2Farticle_6144e4a4-fc7c-5cbd-bb74-6609a57663dc.html'
                            }]
                        }];
                        
                        __tnt.template(template[0], wrapper[0], false, elements, function(t){
                            var footer = t.querySelector('.panel-footer'),
                                note = t.querySelector('.service-note');

                            if(promo.rates && footer){ footer.remove() }
                            if(!promo.custom.note && note){ note.remove() }

                            $.each(promo.rates,function(){
                                var rate = this;
                                var rateTemplate = promoEl.find('template.template-promo-rate');
                                var rateWrapper = $(t).find('.rate-output');
                                if($(t).hasClass('rate-output')){ rateWrapper = $(t); }
                                var rateDuration = 'for unlimited access';
                                if(rate.duration>0){ rateDuration = 'for ' + rate.duration + ' days'; }
                                
                                var insertBefore = false;
                                
                                var rateElements = [{
                                    'element' : '.rate-name',
                                    'html' : rate.name
                                },{
                                    'element' : '.price',
                                    'html' : '$' + (rate.price/100)
                                },{
                                    'element' : '.duration',
                                    'html' : rateDuration
                                },{
                                    'element': '.terms-manual',
                                    'html': rate.terms
                                },{
                                    'element' : 'a',
                                    'html': buttonPurchase,
                                    'attr': [{
                                        'attr' : 'data-subscription-service',
                                        'value' : promo.service_id
                                    },{
                                        'attr' : 'href',
                                        'value' : rate.rate_purchase_url + '&referer_url=https%3A%2F%2Fwww.dailyprogress.com%2Fbusiness%2Faltrias-ceo-retires-names-william-f-gifford-jr-as-chief-executive-and-dominion-energys-ceo%2Farticle_6144e4a4-fc7c-5cbd-bb74-6609a57663dc.html'
                                    }]
                                },{
                                    'element': '.service-label',
                                    'attr': [{
                                        'attr': 'for',
                                        'value': 'service-' + rate.id
                                    }]
                                },{
                                    'element': '.service-input',
                                    'attr': [{
                                        'attr': 'id',
                                        'value': 'service-'+ rate.id,
                                    },{
                                        'attr': 'value',
                                        'value': rate.id
                                    },{
                                        'attr': 'data-rate-name',
                                        'value': rate.name
                                    },{
                                        'attr': 'data-rate-price',
                                        'value': rate.price
                                    },{
                                        'attr': 'data-rate-duration',
                                        'value': rate.duration
                                    }]  
                                }];
                                
                                var i=0;
                                __tnt.template(rateTemplate[0],rateWrapper[0],false,rateElements,function(t){
                                    impressionsData.push({
                                        'id':promo.service_id,
                                        'name':rate.service_name,
                                        'price':rate.price/100,
                                        'brand':"The Daily Progress",
                                        'category': 'subscription',
                                        'list':['-promo'],
                                        'position':i
                                    });
                                    i++;

                                },true,rate.id);
                            });
                        
                            setTimeout(function () {
                                $('#subscribeForm').trigger('refreshRates').delay(500);
                                promoEl.find('.promo-loading').hide();
                                
                                var rateEl = document.getElementById('service-'+promoEl[0].getAttribute('data-rate-id'));
                                if(rateEl){
                                    rateEl.setAttribute('checked','checked');
                                }else if(typeof(promoEl.attr("data-rate-id"))!='undefined'){
                                    promoEl[0].querySelectorAll('.service-radio .service-input')[0].setAttribute('checked','checked');
                                }
                                
                                if(typeof(callback)=='function'){
                                    callback();
                                };
                                
                                promoEl.find('.output').show();
                            },250);
                            
                            setTimeout(function(){
                                $('.rate-link').each(function(){
                                   $(this).on('click',function(ev){ 
                                        ev.preventDefault();

                                        var serviceId = $(this).attr('data-subscription-service');
                                        var service = __tnt.services[serviceId];
                                        var serviceUrl = $(this).attr('href');
                                        var zipcodes = $(this).data('subscription-service-zipcodes');
    
                                        dataLayer.push({
                                            'ecommerce':{
                                                'click':{
                                                    'actionField': {'list':'-promo'},
                                                    'products':[{
                                                        'name': service.name,
                                                        'id': serviceId,
                                                        'price':'',
                                                        'brand': "The Daily Progress",
                                                        'category': service.category,
                                                        'quantity':1
                                                    }]
                                                }
                                            },
                                            'event':'tncms.event.trigger',
                                            'tncms': {
                                                'event': {
                                                    'trigger': {
                                                        'action': 'productClick',
                                                        'category': 'subscription',
                                                        'label':'user clicked on a service'
                                                    }
                                                }
                                            },
                                            'eventCallback': function(){  
                                                setTimeout(function(){
                                                    document.location = serviceUrl;
                                                },100);
                                            }
                                        });

                                        ev.preventDefault();
                                        return false;
                                   });                                        

                                });
                            },750);
                        },true,promo.id);
                    
                    }); // end of data loop
                    
                    if(impressionsData.length){
                        dataLayer.push({
                            'ecommerce':{
                            'impressions': impressionsData
                        },
                            'event':'tncms.event.trigger',
                            'tncms': {
                                'event': {
                                    'trigger': {
                                        'action': 'productImpressionsFinished',
                                        'category': 'subscription',
                                        'label':'services displayed to user'
                                    }
                                }
                            }
                        });
                    }                

                    if(promoEl.find('.promo-found-message-template')[0]){
                        __tnt.template(promoEl.find('.promo-found-message-template')[0],promoEl.find('.service-promo-status-message')[0],false,[],function(t){
                            setTimeout(function () {
                                if(!promoEl.find('.promo-clear-results').hasClass('promo-clear-activated')){
                                    $('.promo-clear-results').one('click',function(){
                                        $("#service-promo-open").find('input[name=promo]').val('');
                                        if(promoEl.find('.service-promo-status-message .promo-found-message')){
                                            promoEl.find('.service-promo-status-message .promo-found-message').remove();
                                        }
                                        promoEl.find('.output').hide();
                                        promoEl.find('.promo-placeholder').find('input.service-field-rate').first().prop({'checked':'checked'});
                                        promoEl.find('.promo-placeholder').show();
                                        $('#subscribeForm').trigger('refreshRates').delay(500);
                                    });
                                    promoEl.find('.service-promo-status-message .promo-clear-results').addClass('promo-clear-activated');
                                }
                            },100);    
                        });
                    }

                    }else{
                        promoEl.find('.promo-loading').hide();
                        promoEl.find('.promo-placeholder').show();
                        
                        if(promoEl.find('.promo-not-found-template')[0]){
                            __tnt.template(promoEl.find('.promo-not-found-template')[0],promoEl.find('.service-promo-status-message')[0],false,[],function(t){});
                        }
                    }
                    
                },
                error:function(){
                    promoEl.find('.promo-loading').hide();

                    if(promoEl.find('.promo-error-template')[0]){
                        __tnt.template(promoEl.find('.promo-error-template')[0],promoEl.find('.service-promo-status-message')[0],false,[],function(t){});
                    }
                    
                    if(typeof(callback)=='function'){
                        callback();
                    };
                },
            });
    }
};
</script><script>

    $(function(){
        $('#service-promo-modal').on('submit',function(){
            var promoEl = $('#service-promo-modal');
            var promoVal = promoEl.find('input[name=promo]').val();
        
            __tnt.subscription.promos.fetch(promoEl, promoVal);
            
            $("#service-promo-modal").find("[data-dismiss=modal]").on('click',function(){
                if(promoOpenedFromModal){ 
                    $("#template-metering").find('.metering-modal').first().modal();
                    promoOpenedFromModal = true;
                }
            });

            return false;
        });
    });
</script>
        
<script>
    $(function(){
        var i = 0;
        $('#subscription-modal').find('.subscription-services').find('.subscription-service').each(function(){
            $(this).attr('id','service-tab-'+i);
        
            $(this).find('.panel-heading h3').html('<a href="" data-toggle="collapse" data-parent="services-modal-collapsable-tabs" aria-expanded="false" aria-controls="service-tab-'+i+'">'+$(this).find('.panel-heading h3').text()+'</a>')
            $(this).find('.panel-body').addClass('panel-collapse collapse').attr('role','tabpanel');
            
            if(i==0){
                $(this).find('.panel-collapse').collapse('show');
                $(this).find('.panel-footer').show();
            }else{
                $(this).find('.panel-footer').hide();
            }
        
            i++;
        });
    
        $('.subscription-services-filter').hide();
        $('#subscription-modal').find('.subscription-services .subscription-service .service-heading').css({'padding':'0px'});
        $('#subscription-modal').find('.subscription-services .subscription-service .service-heading').find('a').css({'display':'block','padding':'10px 15px'});
        $('#subscription-modal').find('.subscription-services .subscription-service .service-heading').find('a[data-toggle=collapse]').on('click',function(event){
            var id = $(this).attr('aria-controls');
            var open = $('#'+id).find('.collapse').hasClass('in');
            
            $('#subscription-modal').find('.subscription-services .subscription-service').each(function(){
                if(this.id == id){
                    $(this).find('.panel-collapse').collapse('show');
                    $(this).find('.panel-footer').show();
                }else{
                    $(this).find('.panel-collapse').collapse('hide');
                    $(this).find('.panel-footer').hide();
                }
            });
        });
        
        $('#asset-content').find('.subscription-required').find('.panel-footer').find('a[data-toggle=collapse]').on('click',function(event){
            $(this).parents('.panel-footer').find('.collapse.collapse-rates').collapse('toggle');
        });
        
        
        $('#asset-content').find('.meter-modal-open').on('click',function(){
            $('#asset-content').find('.alert.notification').css({'z-index':'900'});
            $("#template-metering").find('.metering-modal').first().modal();
        
        });
        
        $('#eedition-subscription').find('.meter-modal-open').on('click',function(){
            $("#template-metering").find('.metering-modal').first().modal();
        });
    });
    
</script>

    
