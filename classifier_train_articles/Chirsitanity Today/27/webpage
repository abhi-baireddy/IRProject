				var	trackUrl = 'https://www.christianitytoday.com/edstetzer/2020/april/heres-why-you-should-take-cares-act-one-on-one-with-marco-r.html';

					ga('send', 'event', trackCategory, trackAction, ( trackLabel || trackUrl));
					//console.log(trackAction);

			});
			
})(window.jQuery);		
