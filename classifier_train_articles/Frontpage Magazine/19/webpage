  <script>
     
    function toggleMenu() {
      var button = document.getElementById("header");
      document.body.classList.toggle("mobile-menu-open");
    }
     
    var authorBody = document.getElementById("author-body");
    if (authorBody && authorBody.offsetHeight > 400) {
      
      authorBody.classList.add("expandable");
      
      var authorMoreButton = document.createElement("BUTTON");
      authorMoreButton.setAttribute('class', 'read-more-button');
      authorMoreButton.innerText = "Read More";
      authorBody.parentNode.insertBefore(authorMoreButton, authorBody.nextSibling)
      
      authorMoreButton.onclick = function () {
        authorBody.classList.add("expanded");
        authorBody.classList.remove("expandable");
        authorMoreButton.remove()
      }
    }
  </script>
  <script>
    $(document).ready(function () {
      
      $(".body").fitVids();
    });
  </script>

