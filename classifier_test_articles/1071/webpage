<source srcset="https://static.politico.com/dims4/default/25a5fcd/2147483647/resize/646x/quality/90/?url=https%3A%2F%2Fstatic.politico.com%2Fac%2F5b%2Fcf8a06ee4933bc477744661200f4%2F190416-measles-vaccine-gty-773.jpg" media="(min-width: 485px)">
<source srcset="https://static.politico.com/dims4/default/5a6f8a5/2147483647/resize/463x/quality/90/?url=https%3A%2F%2Fstatic.politico.com%2Fac%2F5b%2Fcf8a06ee4933bc477744661200f4%2F190416-measles-vaccine-gty-773.jpg" media="(max-width: 484px)">
<img src="https://static.politico.com/dims4/default/a3ce8fa/2147483647/resize/1160x%3E/quality/90/?url=https%3A%2F%2Fstatic.politico.com%2Fac%2F5b%2Fcf8a06ee4933bc477744661200f4%2F190416-measles-vaccine-gty-773.jpg" alt="Measles vaccine" title="Measles vaccine"></picture>
