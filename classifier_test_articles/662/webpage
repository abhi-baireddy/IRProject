$(function()
{
	var pageURL = window.location.pathname.toLowerCase(),
	newsletter_section = 'week';

	if(pageURL.indexOf('/politics/') > -1)
	{
		newsletter_section = 'poli';
		$('#inbody_nl_widget p').remove();
		$('#inbody_nl_widget form').before("<p class='title'>Politics with respect</p><p>Get political stories with respectful analysis</p>");
	}
