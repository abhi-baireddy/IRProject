    <script type="text/javascript">
        var currentSection;
        if ( window.location.href.indexOf( 'kwc2c' ) > -1 )
        {
            $( ".newsletter-banner" ).hide();
        }

        if ( csmJs.pageData.sections.includes( 'Politics' ) || $( 'body' ).hasClass( 'ezc-frontpage' ) )
        {
            currentSection = 'politics';
            changeBanner( 'politics' );
        }
        else if ( csmJs.pageData.sections.includes( 'Books' ) )
        {
            currentSection = 'books';
            changeBanner( 'books' );
        }

        $( '#newsletter-listing-weekender input[type="checkbox"]' ).on( 'click', function()
        {
            $( this ).closest( '.newsletter-container' ).toggleClass( 'clicked' );
        });

        $( '.newsletter-banner:not(.subscribe):not(.free-trial) form' ).on( 'submit', function()
        {
            submitForm( this );
            $( '.form-container form' ).html( '<div style="font-weight:600;" class="text-center">Thank you for signing up for a free Monitor Newsletter!</div>' );
        });

        $( document ).ready( function()
        {
            var currentNewsletterListings = $( '.newsletter-listing' ).length;
            if( currentNewsletterListings > 1 )
            {
                for( var x = 1; x < currentNewsletterListings; x++ )
                {
                    $( '.newsletter-listing' )[x].remove();
                }
                triggerNewsletterModal();
            }
            else
            {
                triggerNewsletterModal();
            }
        });

        function triggerNewsletterModal()
        {
            $( '#newsletter-listing-weekender' ).foundation();
            $( '.newsletter-listing-weekender-btn' ).on( 'click', function( event )
            {
                event.preventDefault();
                $( '#newsletter-listing-weekender' ).foundation( 'open' );
            });
        }
        function submitForm( thisForm )
        {
            event.preventDefault();
            var newsletterEmail = $( thisForm ).find( 'input[type="email"]' ).val(),
                rootURL = 'https://christianscience.secure.force.com/freenewslettermonitor?email=',
                newsletterSections = getCheckedNewsletters(),
                trackingParam = getParam( thisForm );

            var url = rootURL + encodeURIComponent( newsletterEmail ) + newsletterSections + trackingParam;

            window.location = url;
        }

        function getCheckedNewsletters()
        {
            var newsletterSections = '';
            $( '#newsletter-listing-weekender input[type="checkbox"]:checked' ).each( function()
            {
                newsletterSections = newsletterSections + '&' + $( this ).attr( 'id' ) + '=True';
            });
            return newsletterSections;
        }

        function getParam( form )
        {
            var param = setDefaultParam();
            var newsletterBannerParent = $( form ).parents( '.newsletter-banner' ).parent();
            if( newsletterBannerParent.hasClass( 'param-added' ) )
            {
                param = '&icid=mkt:web:' + newsletterBannerParent.attr( 'data-param' );
            }
            return param;
        }

        function setDefaultParam()
        {
            var defaultParam = '&icid=mkt:web:wknd';
            if ( currentSection )
            {
                if ( currentSection === 'books' )
                {
                    defaultParam = '&icid=mkt:web:books';
                }
                else if( currentSection === 'politics' )
                {
                    defaultParam = '&icid=mkt:web:politics';
                }
            }
            if( $( 'body' ).hasClass( 'ezc-frontpage' ) )
            {
                defaultParam = '&icid=mkt:web:politicsfrontpage';
            }
            return defaultParam;
        }

        function changeBanner( section, selector )
        {
            var $bannerIllustration,
                $bannerText;
            if ( selector )
            {
                var $parent = $( selector );
                $parent.find( '.newsletter-banner' ).removeClass( 'politics books' ).addClass( section );
                $bannerIllustration = $parent.find( '.newsletter-banner .left-container img' );
                $bannerText = $parent.find( '.newsletter-banner .left-container h3' );
            }
            else
            {
                var $banners =  $( '.newsletter-banner:not( .subscribe ):not( .free-trial )' );
                $banners.addClass( section );
                $bannerIllustration = $banners.find( '.left-container img' );
                $bannerText = $banners.find( '.left-container h3' );
            }

            $( '#newsletter-listing-weekender #week' ).removeAttr( 'checked' ).closest( '.newsletter-container' ).removeClass( 'clicked' );

            if ( section === 'politics' )
            {
                $bannerIllustration.replaceWith( '<img class="float-left hide-for-small-only" src="//images.csmonitor.com/csm/2019/07/1086451_2_chat_bubble_standard.png?alias=original" alt="overlapping speech bubbles">' );
                $bannerText.replaceWith( '<h3>Get balanced and insightful politics stories delivered twice&nbsp;a&nbsp;week.</h3>' )
                $( '#newsletter-listing-weekender #poli' ).attr( 'checked', 'checked' ).closest( '.newsletter-container' ).addClass( 'clicked' );
                currentSection = "politics";
            }
            else if ( section === 'books' )
            {
                $bannerIllustration.replaceWith( '<img class="float-left hide-for-small-only" src="//images.csmonitor.com/csm/2019/09/1089038_1_opened-books_standard.png?alias=original" alt="opened books">' );
                $bannerText.replaceWith( '<h3>There\'s a world of new ideas in every books newsletter.</h3>' )
                $( '#newsletter-listing-weekender #book' ).attr( 'checked', 'checked' ).closest( '.newsletter-container' ).addClass( 'clicked' );
                currentSection = "books";
            }
        }
    </script>
</section>
	</div>	</div>
