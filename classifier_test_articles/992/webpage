	<script>
		function jsInappbrowseragent() {
		var ua = navigator.userAgent || navigator.vendor || window.opera;
		var InAppBrowserAgent = (ua.indexOf('FBAN') > -1) || (ua.indexOf('FBAV') > -1) ? 'Facebook' : 'None';
		return InAppBrowserAgent;
		}
	</script>
