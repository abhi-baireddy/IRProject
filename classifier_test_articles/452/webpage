<img srcset="https://cdn.vox-cdn.com/thumbor/Oqbsn4-xmcYV-RlhdHkCZu_V7sY=/0x0:4401x2476/320x0/filters:focal(0x0:4401x2476):no_upscale()/cdn.vox-cdn.com/uploads/chorus_asset/file/19887776/GettyImages_1217470928.jpg 320w, https://cdn.vox-cdn.com/thumbor/YcPFQ0by35-P5pMJWGzZ1lVm4gU=/0x0:4401x2476/520x0/filters:focal(0x0:4401x2476):no_upscale()/cdn.vox-cdn.com/uploads/chorus_asset/file/19887776/GettyImages_1217470928.jpg 520w, https://cdn.vox-cdn.com/thumbor/GFxvEeBgurT8NNcif6GCH28xcm8=/0x0:4401x2476/720x0/filters:focal(0x0:4401x2476):no_upscale()/cdn.vox-cdn.com/uploads/chorus_asset/file/19887776/GettyImages_1217470928.jpg 720w, https://cdn.vox-cdn.com/thumbor/-sfgN9F0XFvT1f7YZbxbq0nmve0=/0x0:4401x2476/920x0/filters:focal(0x0:4401x2476):no_upscale()/cdn.vox-cdn.com/uploads/chorus_asset/file/19887776/GettyImages_1217470928.jpg 920w, https://cdn.vox-cdn.com/thumbor/LUBcoD58d7BqdoNLvypyiMGWFAY=/0x0:4401x2476/1120x0/filters:focal(0x0:4401x2476):no_upscale()/cdn.vox-cdn.com/uploads/chorus_asset/file/19887776/GettyImages_1217470928.jpg 1120w, https://cdn.vox-cdn.com/thumbor/q9aXIzaa1UQVQH12RfMupa09Mvg=/0x0:4401x2476/1320x0/filters:focal(0x0:4401x2476):no_upscale()/cdn.vox-cdn.com/uploads/chorus_asset/file/19887776/GettyImages_1217470928.jpg 1320w, https://cdn.vox-cdn.com/thumbor/qnXaLrAQ0Wd6_C6nF2nTBEYBUC8=/0x0:4401x2476/1520x0/filters:focal(0x0:4401x2476):no_upscale()/cdn.vox-cdn.com/uploads/chorus_asset/file/19887776/GettyImages_1217470928.jpg 1520w, https://cdn.vox-cdn.com/thumbor/1uN4WIcx0inM8KvIUAy1zh6vDcw=/0x0:4401x2476/1720x0/filters:focal(0x0:4401x2476):no_upscale()/cdn.vox-cdn.com/uploads/chorus_asset/file/19887776/GettyImages_1217470928.jpg 1720w, https://cdn.vox-cdn.com/thumbor/q5DLFFkr9CF2Uum0BJ9pWBMx-3w=/0x0:4401x2476/1920x0/filters:focal(0x0:4401x2476):no_upscale()/cdn.vox-cdn.com/uploads/chorus_asset/file/19887776/GettyImages_1217470928.jpg 1920w" sizes="(min-width: 1221px) 846px, (min-width: 880px) calc(100vw - 334px), 100vw" alt="" data-upload-width="4401" s