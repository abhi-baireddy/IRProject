okie.split(\';\');\n\n    for(var i = 0; i <ca.length; i++){\n        var c = ca[i];\n\n        while(c.charAt(0) == \' \') c = c.substring(1);\n\n        if(c.indexOf(name) == 0) return c.substring(name.length, c.length);\n    }\n    \n    return "";\n}\n// Parse json cookie\nfunction parseCookie(cvalue) {\n    try { return JSON.parse(cvalue); }\n    catch { return []; }\n}\n// Set a cookie\nfunction setCookie(cname, cvalue, minutes){\n    console.log(\'setCookie called\');\n    \n    var d = new Date();\n    d.setTime(d.getTime() + (minutes*60*1000));\n    \n    var expires = "expires="+ d.toUTCString();\n    document.cookie = cname + "=" + cvalue + ";" + expires + ";domain=.salon.com;path=/";\n}\n// Search Function\nfunction focustime(){\n    var input = document.getElementById ("search_input"); \n    input.focus();\n}\n// Get Proper RTP version\nfunction getRTPVersion(){\n  try{\n      var proper_cookie = getCookie("proper_rtp_split_test");\n      \n      if(proper_cookie == "") return 0;\n      var json = JSON.parse(proper_cookie);\n      \n      if(json && json.version_id) return json.version_id;\n      else return 0;\n  }\n  catch(e){\n      return 0;\n  }\n}\n\n\n//Ad-free check (LaterPay / Scroll)\nvar adsRemovedWith = false;\n// LaterPay check\nif(getCookie(\'access\') != ""){\n    console.log(\'ads removed by Laterpay\');\n    adsRemovedWith = \'laterpay\';\n    salon_config.live_ads = 0;\n}\n// Scroll check\nelse if(getCookie(\'scroll0\') != ""){ \n    console.log(\'ads removed by scroll.com\');\n    adsRemovedWith = \'scroll\';\n    salon_config.live_ads = 0;\n}\n// Salon (stripe) check\nelse if(getCookie(\'salon_ad_free_user\') != ""){ \n    console.log(\'ads removed by Salon.com\');\n    adsRemovedWith = \'salon\';\n    salon_config.live_ads = 0;\n}\n\n// Shared Premium check \nelse if(getCookie(\'shared_premium\') != ""){ \n\n    //parse cookie\n    window.sharedPremium = parseCookie(getCookie(\'shared_premium\'));\n\n    //test if active shared subscription (exclude salon users who save $guid\'s for visitng partner sites)\n    if (window.sharedPremium.active && window.sharedPremium.active=="yes" && window.sharedPremium.site && window.sharedPremium.site!="salon") {\n        console.log(\'ads removed by shared premium - \'+window.sharedPremium.site);\n        adsRemovedWith = \'shared_premium_\'+window.sharedPremium.site;\n        salon_config.live_ads = 0;\n    }\n}\n\n// Hide ad containers for ad-free users\nif(salon_config.live_ads == 0){\n    // Fix css\n    var style = document.createElement(\'style\');\n    style.innerHTML = \'#subscription-mobile, #inline-subscription, .proper-ad-unit, #salon_auto_video { display: none !important; } .ad-topper { min-height:1em !important; height:1em !important; } .page-category .black-container { min-height:60px !important; height:60px !important; } \';\n    document.head.appendChild(style);\n}\n\n// Counter for load-more button\nif(!window.counter) window.counter = 2;\n\n'}});  </script>

