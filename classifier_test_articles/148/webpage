						ga('send', 'event', 'ETL module impression', $first.data('module') );
					}

					$('#legal-innovation-module').find('li a').each(function() {
						var $el = $(this);
						if ( ga ) {
							ga('send', 'event', 'ETL module impression', $el.data('product'), $el.data('module'));
						}
					})

				$('#legal-innovation-module li a').click(function() {
					var $el = $(this);
					if ( ga ) {
						ga('send', 'event', 'ETL module click', $el.data('product'), $el.data('module'));
						ga('send', 'event', 'ETL module click', $el.data('module'), $el.data('product'));
					}
				});

			});
		});
	</script>

<script async type='text/javascript' src='https://cdn.connatix.com/min/connatix.renderer.infeed.min.js' data-connatix-token='fbaa1842-dd35-40a9-9986-453a440608e5'></script>
