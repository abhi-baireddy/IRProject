<img srcset="https://cdn.vox-cdn.com/thumbor/e-xl0W_Zv-HNbNv7AH3i3LsosBc=/0x0:3000x2000/320x0/filters:focal(0x0:3000x2000):no_upscale()/cdn.vox-cdn.com/uploads/chorus_asset/file/19900794/AP_061107048144.jpg 320w, https://cdn.vox-cdn.com/thumbor/4y8W2Gxaf0Q1BpMJh4VWJgzBvFY=/0x0:3000x2000/520x0/filters:focal(0x0:3000x2000):no_upscale()/cdn.vox-cdn.com/uploads/chorus_asset/file/19900794/AP_061107048144.jpg 520w, https://cdn.vox-cdn.com/thumbor/HVJIU5YnWRqgwL6kNP55ebdSpYk=/0x0:3000x2000/720x0/filters:focal(0x0:3000x2000):no_upscale()/cdn.vox-cdn.com/uploads/chorus_asset/file/19900794/AP_061107048144.jpg 720w, https://cdn.vox-cdn.com/thumbor/rJNX8HvsATfwo9jTE7AuOZZMNRE=/0x0:3000x2000/920x0/filters:focal(0x0:3000x2000):no_upscale()/cdn.vox-cdn.com/uploads/chorus_asset/file/19900794/AP_061107048144.jpg 920w, https://cdn.vox-cdn.com/thumbor/O75U6Ytg2N3rldk2WQBmhXpSFZc=/0x0:3000x2000/1120x0/filters:focal(0x0:3000x2000):no_upscale()/cdn.vox-cdn.com/uploads/chorus_asset/file/19900794/AP_061107048144.jpg 1120w, https://cdn.vox-cdn.com/thumbor/T8UnWoW65DJ92BYff6Jpg2jDp5c=/0x0:3000x2000/1320x0/filters:focal(0x0:3000x2000):no_upscale()/cdn.vox-cdn.com/uploads/chorus_asset/file/19900794/AP_061107048144.jpg 1320w, https://cdn.vox-cdn.com/thumbor/wLhLtWo1GHCinvAJbapYwFS_nkI=/0x0:3000x2000/1520x0/filters:focal(0x0:3000x2000):no_upscale()/cdn.vox-cdn.com/uploads/chorus_asset/file/19900794/AP_061107048144.jpg 1520w, https://cdn.vox-cdn.com/thumbor/izsHk9D5YEBRpjnNWsa37E6EP8I=/0x0:3000x2000/1720x0/filters:focal(0x0:3000x2000):no_upscale()/cdn.vox-cdn.com/uploads/chorus_asset/file/19900794/AP_061107048144.jpg 1720w, https://cdn.vox-cdn.com/thumbor/aBsSKp3FtXLZAWpCS-JVvK6UfEs=/0x0:3000x2000/1920x0/filters:focal(0x0:3000x2000):no_upscale()/cdn.vox-cdn.com/uploads/chorus_asset/file/19900794/AP_061107048144.jpg 1920w" sizes="(min-width: 1221px) 846px, (min-width: 880px) calc(100vw - 334px), 100vw" alt="" data-upload-width="3000" src="https://cdn.vox-cdn.com/thumbor/oQFbr7_sLGWuIpD0kEwOXDUjFk8