var TimestampService=function(){function a(){_classCallCheck(this,a),this.updateTimestamp=this.updateTimestamp.bind(this),this.loopThroughTimestampItems=this.loopThroughTimestampItems.bind(this),"loading"===document.readyState?DOMHelpers2.delegateEvent("DOMContentLoaded",this.loopThroughTimestampItems):this.loopThroughTimestampItems()}return _createClass(a,[{key:"loopThroughTimestampItems",value:function(){for(var a=document.querySelectorAll('[data-timestamp-loaded\x3d"false"]'),b=0;b<a.length;b++){var c=
